<div class="devise">
  <div class="devise-conteudo">
    <div class="devise-conteudo-imagem">
      <%= image_tag asset_path('axoerro.png'), class:'devise-conteudo-imagem'%>
    </div>
    <div class="devise-conteudo-password-view">
      <h2 class="password-view-titulo">Esqueceu sua senha?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email %> <br/>
          <div class="password-view-input">
            <i class="fa-solid fa-envelope"></i>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Exemplo@exemplo.com" %>
          </div>
        </div>
        <div class="password-view-botao">
          <%= f.submit "Enviar instruções" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
