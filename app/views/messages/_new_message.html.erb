<div class="form-group msg-form">
  <%= form_with(model: [room ,message], remote: true, class: "d-flex input-message", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset"} ) do |f| %>
    <%= f.text_field :body, id: 'chat-text', class: "form-control msg-content", placeholder: "Escreva sua mensagem", autocomplete: 'off'  %>
    <%= f.submit 'Enviar', data: { disable_with: false }, class: "btn btn-primary" %>
  <% end %>
</div>

<script> 
  const form = document.querySelector('.input-message');
  const chatText = document.querySelector('#chat-text')
  form.addEventListener('submit', (event) => {
    if(chatText.value === "") {
      event.preventDefault();
    }
  })
</script>